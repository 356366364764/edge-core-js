{
  "extends": [
    "standard-kit/lint",
    "standard-kit/lint/node",
    "standard-kit/lint/jsx",
    "standard-kit/lint/flow"
  ],
  "plugins": ["prettier"],
  "rules": {
    "camelcase": "error",
    "lines-between-class-members": [
      "error",
      "always",
      { "exceptAfterSingleLine": true }
    ],
    "no-throw-literal": "error",
    "no-var": "error",
    "prettier/prettier": "error"
  }
}
